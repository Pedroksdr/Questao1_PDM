<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Compras"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/cbArroz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arroz 1 Kg (R$ 2,69)"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/cbLeite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leite longa vida (R$ 2,70)"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/cbCarne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carne Friboi (R$ 16,70)"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/cbFeijao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FeijÃ£o carioquinha 1 Kg (R$ 3,38)"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/cbRefrigerante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refrigerante coca-cola 2 litros (R$ 3,00)"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Total"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:backgroundTint="#af0e12"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Valor Total: R$ 0,00"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>